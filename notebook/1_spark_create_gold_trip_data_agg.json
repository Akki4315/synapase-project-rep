				"source": [
					"## **Trip Data Aggregation**\r\n",
					"\r\n",
					"### **Group by columns**\r\n",
					"1. year\r\n",
					"2. month\r\n",
					"3. pu_location_id\r\n",
					"4. do_location_id\r\n",
					"\r\n",
					"### **Aggregation columns**\r\n",
					"1. total_trip_count\r\n",
					"2. total_fare_amount"
				]
			},
			{
				"cell_type": "code",
				"source": [
					"bronze_folder_path = 'abfss://nyc-taxi-data@synapsegen2sa.dfs.core.windows.net/raw'\r\n",
					"silver_folder_path = 'abfss://nyc-taxi-data@synapsegen2sa.dfs.core.windows.net/silver'\r\n",
					"gold_folder_path = 'abfss://nyc-taxi-data@synapsegen2sa.dfs.core.windows.net/gold'"
				],
				"execution_count": 2
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"#to disable auto inferschema by setting the configuration is false\r\n",
					"spark.conf.set(\"spark.sql.sources.partitionColumnTypeInference.enabled\", \"false\")"
				],
				"execution_count": 2
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					},
					"microsoft": {
						"language": "sparksql"
					},
					"collapsed": false
				},
				"source": [
					"%%sql\r\n",
					"create database if not exists nyc_taxi_ldw_spark\r\n",
					"location 'abfss://nyc-taxi-data@synapsegen2sa.dfs.core.windows.net/gold';"
				],
				"execution_count": 12
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					},
					"collapsed": false
				},
				"source": [
					"trip_data_green_df = spark.read.parquet(f\"{silver_folder_path}/trip_data_green\")\r\n",
					"\r\n",
					"#display(trip_data_green_df)"
				],
				"execution_count": 1
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"#total trip count & total fare amount\r\n",
					"from pyspark.sql.functions import * \r\n",
					"trip_data_green_agg_df = trip_data_green_df\\\r\n",
					"                        .groupBy('year', 'month', 'PULocationID', 'DOLocationID')\\\r\n",
					"                        .agg(count(lit(1)).alias(\"total_trip_count\"),\r\n",
					"                            round(sum(\"fare_amount\"),2).alias(\"total_fare_amount\"))"
				],
				"execution_count": 11
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"trip_data_green_agg_df.write.mode(\"overwrite\").partitionBy(\"year\",\"month\").format(\"parquet\").saveAsTable(\"nyc_taxi_ldw_spark.trip_data_green_agg\")"
				],
				"execution_count": 13
			}
		]
